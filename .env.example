# Bot Configuration
BOT_TOKEN=your_telegram_bot_token
API_BASE_URL=http://localhost:3000
WEB_APP_URL=https://your-app.com
WEBHOOK_PORT=3001
WEBHOOK_SECRET=your_webhook_secret
NODE_ENV=development

# Local Bot API Configuration (for large file support up to 2GB)
# Set to "true" to enable Local Bot API
USE_LOCAL_BOT_API=false
LOCAL_BOT_API_URL=http://localhost:8081
# Host path for mounted volume (Windows dev only, not needed for Railway)
LOCAL_BOT_API_FILES_PATH=

# Telegram API credentials (required for Local Bot API)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
